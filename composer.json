{
    "name": "retamayo/tablemancer",
    "description": "A PHP library for efficient database table management, including CRUD operations, JSON data handling, and security features.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Retamayo\\Tablemancer\\": "src/",
            "Retamayo\\Tablemancer\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "RE-Tamayo",
            "email": "rosas.emerjoe.tamayo@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.0",
        "ext-mbstring": "*",
        "ext-iconv": "*",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-simplexml": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3",
        "mockery/mockery": "^1.6"
    }
}
